<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.actiknow.triburg"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:name="com.actiknow.triburg.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProductListActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ShoppingBagActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ProductDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ProductDetailInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.AddProductActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>