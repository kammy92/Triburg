<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/app_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:visibility="visible">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                style="@style/Widget.MyApp.ActionBar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/toolbar_background_transparent">
                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back"
                        android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="ADD A NEW DESIGN"
                        android:textColor="@color/text_color_black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tvSaveDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="SAVE"
                        android:textColor="@color/text_color_black"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBar">
            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appBar"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rlImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vpImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.rd.PageIndicatorView
                        android:id="@+id/pageIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vpImages"
                        attrs:piv_animationDuration="500"
                        attrs:piv_animationType="thinWorm"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        attrs:piv_radius="3dp"
                        attrs:piv_selectedColor="@color/text_color_black"
                        attrs:piv_strokeWidth="3dp"
                        attrs:piv_unselectedColor="@color/text_color_grey_light"
                        attrs:piv_viewPager="@id/vpImages"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vpImages"
                        android:overScrollMode="never"
                        android:visibility="visible">
                    </android.support.v7.widget.RecyclerView>
                    <HorizontalScrollView
                        android:id="@+id/hsvImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_small"
                        android:visibility="gone">
                        <LinearLayout
                            android:id="@+id/llImages"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlImages"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SIZE"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/edittext_padding"
                        android:weightSum="4">
                        <TextView
                            android:id="@+id/tvSizeS"
                            android:layout_width="@dimen/blood_group_button"
                            android:layout_height="@dimen/blood_group_button"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_extra_large"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvSizeM"
                            android:layout_width="@dimen/blood_group_button"
                            android:layout_height="@dimen/blood_group_button"
                            android:layout_marginLeft="@dimen/activity_margin"
                            android:layout_marginStart="@dimen/activity_margin"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_extra_large"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvSizeL"
                            android:layout_width="@dimen/blood_group_button"
                            android:layout_height="@dimen/blood_group_button"
                            android:layout_marginLeft="@dimen/activity_margin"
                            android:layout_marginStart="@dimen/activity_margin"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:text="L"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_extra_large"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvSizeXL"
                            android:layout_width="@dimen/blood_group_button"
                            android:layout_height="@dimen/blood_group_button"
                            android:layout_marginLeft="@dimen/activity_margin"
                            android:layout_marginStart="@dimen/activity_margin"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:text="XL"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_extra_large"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fabric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_marginTop="@dimen/activity_margin_small">
                    <AutoCompleteTextView
                        android:id="@+id/etFabric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:padding="@dimen/edittext_padding"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/text_color_black"
                        android:textSize="@dimen/text_size_large"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/input_layout_fabric"
                    android:layout_marginTop="@dimen/activity_margin_small">
                    <AutoCompleteTextView
                        android:id="@+id/etCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CATEGORY  Kurtis, Ethnic, ..."
                        android:inputType="text"
                        android:padding="@dimen/edittext_padding"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/text_color_black"
                        android:textSize="@dimen/text_size_medium"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/input_layout_category"
                    android:layout_marginTop="@dimen/activity_margin_small">
                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="MIN QTY"
                        android:inputType="number"
                        android:padding="@dimen/edittext_padding"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/text_color_black"
                        android:textSize="@dimen/text_size_medium"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/input_layout_price"
                    android:layout_marginTop="@dimen/activity_margin_small">
                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DESCRIPTION"
                        android:inputType="text"
                        android:padding="@dimen/edittext_padding"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/text_color_black"
                        android:textSize="@dimen/text_size_medium"/>

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:elevation="@dimen/button_elevation"
            android:src="@drawable/ic_add_image"
            android:visibility="visible"
            app:borderWidth="0dp"/>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>