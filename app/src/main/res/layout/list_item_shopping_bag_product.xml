<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="70dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl1"
            android:layout_alignTop="@+id/rl1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/rl1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cotton quilted jacket"
                android:textColor="@color/text_color_black"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvProductReference"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color_black"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvProductName"
                android:paddingTop="5dp"
                android:text="REF.83080290-NORIEGA7"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvProductColor"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/accent"/>
                <TextView
                    android:id="@+id/tvProductSize"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="M"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:gravity="end"
                    android:text="29 Pcs."/>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>